@using KisiselWebProjesi_MVC.Models.Siniflar
@model List<Anasayfa>
@{
    Layout = null;
}


<!DOCTYPE html>
    <html lang="tr">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Kişisel Web Sitesi</title>
        <link rel="stylesheet" href="~/Web-kisiselweb-sitesi/style.css">
        <script src="https://kit.fontawesome.com/a3a2c2b848.js" crossorigin="anonymous"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    </head>

    <body>
        <div class="center">
            <div class="avatar">
                @foreach (var x in Model)
                {
                    <img src="@x.profil">
                }

            </div>
            <div class="content">
                @foreach (var x in Model)
                {
                    <h2>@x.isim</h2>
                    <h3>@x.unvan</h3>
                    <p> @x.aciklama</p>
                    <h4>@x.iletisim</h4>
                }

            </div>
            @Html.Action("ikonlar","Anasayfa")

        </div>
    </body>

    </html>
